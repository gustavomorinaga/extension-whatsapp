{
	"name": "extension-whatsapp",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"author": "Gustavo Morinaga <me@gustavomorinaga.dev>",
	"description": "Demo extension for WhatsApp, using SvelteKit",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:watch": "vite build --watch",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"format:staged": "pretty-quick --staged",
		"ui:add": "pnpm dlx shadcn-svelte@latest add",
		"clean": "del-cli ./**/node_modules/ ./**/.svelte-kit/"
	},
	"devDependencies": {
		"@fontsource-variable/inter": "5.0.18",
		"@fontsource-variable/roboto-mono": "5.0.19",
		"@sveltejs/adapter-auto": "3.2.1",
		"@sveltejs/kit": "2.5.10",
		"@sveltejs/vite-plugin-svelte": "3.1.0",
		"@types/chrome": "0.0.269",
		"@typescript-eslint/eslint-plugin": "7.10.0",
		"@typescript-eslint/parser": "7.10.0",
		"autoprefixer": "10.4.19",
		"cssnano": "7.0.1",
		"del-cli": "5.1.0",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-svelte": "2.39.0",
		"postcss": "8.4.38",
		"postcss-import": "16.1.0",
		"postcss-load-config": "5.1.0",
		"prettier": "3.2.5",
		"prettier-plugin-svelte": "3.2.3",
		"prettier-plugin-tailwindcss": "0.5.14",
		"pretty-quick": "4.0.0",
		"svelte": "4.2.17",
		"svelte-check": "3.7.1",
		"sveltekit-adapter-chrome-extension": "2.0.1",
		"tailwind-scrollbar": "3.1.0",
		"tailwindcss": "3.4.3",
		"tslib": "2.6.2",
		"typescript": "5.4.5",
		"vite": "5.2.11"
	},
	"dependencies": {
		"bits-ui": "0.21.9",
		"clsx": "2.1.1",
		"lucide-svelte": "0.379.0",
		"tailwind-merge": "2.3.0",
		"tailwind-variants": "0.2.1"
	}
}
